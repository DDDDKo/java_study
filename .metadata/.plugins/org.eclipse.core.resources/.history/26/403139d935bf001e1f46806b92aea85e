package backjoon;

import java.util.Scanner;

public class MagicBlock {

	public static void main(String[] args) {
		
		int m, count = 1, markX, markY;
		
		Scanner scanner = new Scanner(System.in);
		m = scanner.nextInt();
		scanner.close();
		
		int[][] box = new int[m][m];	// 2차원 배열 생성
		for(int i = 0; i < box.length ; i++) {	//2차원 배열 초기화
			for(int j = 0 ; j < box.length ; j++) {
				box[i][j] = 0;
			}
		}
		if(m/2==0) {
			markX = (m/2)-1;
			markY = 0;
		}else {
			markX = m/2;
			markY = 0;
		}
		
		while(count <= m*m) {
			box[markX][markY] = count;
			count++;
			if(box[markX][markY] != 0) {
				if (markX < m-1 && markY ==0) {
					markX++;
					markY = m-1;
				}else if(markX < m-1 && markY < m-1) {
					markX++;
					markY--;
				}else if (markX == m-1 && markY < m-1 ) {
					markX = 0;
					markY--;
				}
			}
			else markY--;
			if(count == m*m) break;
		}
	}
}
