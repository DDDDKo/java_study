package backjoon;

//import java.util.Scanner;

public class Snail {

	public static void main(String[] args) {
		int count = 1, m, startX, startY, stopX, stopY;
		int movedistance = 1;
//		Scanner scanner = new Scanner(System.in);
//		m = scanner.nextInt();
//		scanner.close();
		m = 5;
		int[][] box = new int[m][m];	// 2차원 배열 생성
		for(int i = 0; i < box.length ; i++) {	//2차원 배열 초기화
			for(int j = 0 ; j < box.length ; j++) {
				box[i][j] = 0;
			}
		}
		if(m/2==0) {
			startX = (m/2)-1;
			startY = (m/2)-1;
		}else {
			startX = m/2; 
			startY = m/2;
		}
		while(count <= m*m) {	//1부터 시작
			if(box[startX][startY] != 0)
			for(int i = 0; i < movedistance ; i++) { //아래로 이동
				box[startX][startY] = count;
				count++;
				startY ++;
				}
			
		}
			
				
		
		for(int i = 0 ; i < box.length ; i++) {   // 2차원 배열 출력
			for(int j = 0 ; j < box.length ; j++) {
				System.out.println(box[i][j]+"");
			}
		}
	}
}
