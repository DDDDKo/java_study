package backjoon;

//import java.util.Scanner;

public class Snail {

	public static void main(String[] args) {
		int count = 1, m, startX, startY, stopX, stopY;
		int movedistance = 1;
//		Scanner scanner = new Scanner(System.in);
//		m = scanner.nextInt();
//		scanner.close();
		m = 5;
		int[][] box = new int[m][m];
		if(m/2==0) {
			startX = (m/2)-1;
			startY = (m/2)-1;
			stopX = (m/2)-1;
			stopY = m/2;
		}else {
			startX = m/2; 
			startY = m/2;
			stopX = m/2;
			stopY = (m/2)+1;
		}
		while(count <= m*m) {
			if(stopX < m-1 || stopY < m-1) {
				while(startY <= stopY && startX == stopX) {	// 아래 이동
					if(startY == stopY) {
						stopX += movedistance;
						break;
					}
					box[startX][startY] = count;
					startY++;
					count++;
				}
				while(startX <= stopX && startY == stopY) {	// 우측 이동
					if(startX == stopX) {
						stopY -= movedistance;
						movedistance++;
						break;
					}
					box[startX][startY] = count;
					startX++;
					count++;
				}
				while(startY >= stopY && startX == stopX) {	// 위 이동
					if(startY == stopY) {
						stopX -= movedistance;
						break;
					}
					box[startX][startY] = count;
					startY--;
					count++;
				}
				while(startX >= stopX && startY == stopY) {	// 좌측 이동
					if(startX == stopX) {
						stopY += movedistance;
						movedistance++;
						break;
					}
					box[startX][startY] = count;
					startX--;
					count++;
				}
			}else break;
		}

	}
}
