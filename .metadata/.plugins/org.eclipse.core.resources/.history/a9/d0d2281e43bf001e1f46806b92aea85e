package backjoon;

//import java.util.Scanner;

public class AAA {

	public static void main(String[] args) {
		int count = 1, m, startX, startY, stopX, stopY;
		int movedistance = 1;
//		Scanner scanner = new Scanner(System.in);
//		m = scanner.nextInt();
//		scanner.close();
		m = 5;
		int[][] box = new int[m][m];
		for(int i = 0; i < box.length ; i++) {
			for(int j = 0 ; j < box.length ; j++) {
				box[i][j] = 0;
			}
		}
		startX = (m-1) / 2;
		starty = (m-1) / 2;
		
		while(count <= m*m) {
			if(stopX < m-1 || stopY < m-1) {
				while(startY <= stopY && startX == stopX) {	// 아래 이동
					if(startY == stopY) {
						stopX += movedistance;
						break;
					}
					box[startX][startY] = count;
					startY++;
					count++;
				}
				while(startX <= stopX && startY == stopY) {	// 우측 이동
					if(startX == stopX) {
						stopY -= movedistance;
						movedistance++;
						break;
					}
					box[startX][startY] = count;
					startX++;
					count++;
				}
				while(startY >= stopY && startX == stopX) {	// 위 이동
					if(startY == stopY) {
						stopX -= movedistance;
						break;
					}
					box[startX][startY] = count;
					startY--;
					count++;
				}
				while(startX >= stopX && startY == stopY) {	// 좌측 이동
					if(startX == stopX) {
						stopY += movedistance;
						movedistance++;
						break;
					}
					box[startX][startY] = count;
					startX--;
					count++;
				}
			}else break;
		}
		
		for(int i = 0 ; i < m; i++) {
			for(int j = 0 ; j < m ; j++) {
				System.out.print(box[i][j]+"");
			}
			System.out.println(" ");
		}
	}
}
